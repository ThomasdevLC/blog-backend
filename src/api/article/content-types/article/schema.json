{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "articles",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "text": {
      "type": "text",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "tag": {
      "type": "enumeration",
      "enum": [
        "Actualités",
        "Infos",
        "Evénements"
      ],
      "required": true
    },
    "author": {
      "type": "enumeration",
      "enum": [
        "C. Le Cam",
        "M. Mauguin"
      ],
      "default": "C. Le Cam",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "main": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "blockText": {
      "type": "blocks",
      "required": true
    }
  }
}
